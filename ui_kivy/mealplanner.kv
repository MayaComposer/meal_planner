<MainWindow>:
    md_bg_color: self.theme_cls.backgroundColor
    MDBoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: ''
            id: mealplan_label
            theme_text_color: "Primary"
            halign: 'center'
            valign: 'middle'

        MDBoxLayout:
            orientation: 'horizontal'
            

            MDButton:
                style: 'elevated'
                size_hint_x: 1
                on_release: root.pressed_add_recipe()
                MDButtonText:
                    text: 'Add recipe'
            MDButton:
                style: 'elevated'
                size_hint_x: 1
                on_release: root.display_mealplan()
                MDButtonText:
                    text: 'New meal plan'
            MDButton:
                style: 'elevated'
                size_hint_x: 1
                on_release: root.quit_app()
                MDButtonText:
                    text: 'Quit'